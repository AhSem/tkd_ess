<AdminRoot>
	orientation: 'vertical'
	chung_score: chung_score
	chung_penalty: chung_penalty
	hong_score: hong_score
	hong_penalty: hong_penalty
	time_counter: time_counter
	time_set: time_set
	round_number: round_number
	server_host: server_host
	server_port: server_port
	connection_status: connection_status

	Label:
		size_hint: (1, None)
		text: 'SETTINGS'
		text_size: self.size
		halign: 'left'
		valign: 'center'
		height: 40
		padding_x: 10
		canvas.before:
			Color:
				rgba: (0.5, 0.5, 0.5, 1)
            Rectangle:
            	pos: self.pos
            	size: self.size

	GridLayout:
		cols: 2
		rows: 1
		size_hint: (1, None)
		height: self.minimum_height

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 30
			Label:
				text: 'Category'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				size_hint: (.2, None)
				height: 30
				padding_x: 10
			TextInput:
				size_hint: (.8, None)
				height: 30
				on_text: root.update_category_name(self)

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 30
			Label:
				text: 'Match'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				height: 30
				padding_x: 10
			TextInput:
				# size_hint: (.2, None)
				height: 30
				on_text: root.update_match_number(self)
			Label:
				text: 'Time'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				height: 30
			TextInput:
				id: time_set
				text: '0:00'
				on_text: root.set_time(self)
			Label:
				text: 'Round'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				height: 30
			TextInput:
				text: '1'
				on_text: root.set_round(self)

	GridLayout:
		cols: 2
		rows: 1
		size_hint_y: None
		height: self.minimum_height
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: None
			height: self.minimum_height
			Label:
				size_hint: (1, None)
				text: 'CHUNG'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				height: 40
				padding_x: 10
				canvas.before:
					Color:
						rgba: (0, 0, 1, 1)
		            Rectangle:
		            	pos: self.pos
		            	size: self.size

		    GridLayout:
		    	cols: 1
		    	rows: 4
		    	size_hint: (1, None)
		    	height: self.minimum_height
		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Name'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		TextInput:
		    			text: ''
		    			hint_text: 'Name'
		    			on_text: root.update_chung_name(self)

		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Score'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		Label:
		    			id: chung_score
		    			size_hint_x: .7
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'

		    		Button:
		    			text: '+'
		    			size_hint_x: .1
		    			on_press: root.add_chung_score(self)
		    		Button:
		    			text: '-'
		    			size_hint_x: .1
		    			on_press: root.minus_chung_score(self)

		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Penalty'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		Label:
		    			id: chung_penalty
		    			size_hint_x: .7
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'

		    		Button:
		    			text: '+'
		    			size_hint_x: .1
		    			on_press: root.add_chung_penalty(self)
		    		Button:
		    			text: '-'
		    			size_hint_x: .1
		    			on_press: root.minus_chung_penalty(self)

		BoxLayout:
			orientation: 'vertical'
			size_hint_y: None
			height: self.minimum_height
			Label:
				size_hint: (1, None)
				text: 'HONG'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				height: 40
				padding_x: 10
				canvas.before:
					Color:
						rgba: (1, 0, 0, 1)
		            Rectangle:
		            	pos: self.pos
		            	size: self.size

		    GridLayout:
		    	cols: 1
		    	rows: 4
		    	size_hint: (1, None)
		    	height: self.minimum_height
		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Name'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		TextInput:
		    			text: ''
		    			hint_text: 'Name'
		    			on_text: root.update_hong_name(self)

		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Score'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		Label:
		    			id: hong_score
		    			size_hint_x: .7
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'

		    		Button:
		    			text: '+'
		    			size_hint_x: .1
		    			on_press: root.add_hong_score(self)
		    		Button:
		    			text: '-'
		    			size_hint_x: .1
		    			on_press: root.minus_hong_score(self)

		    	BoxLayout:
		    		orientation: 'horizontal'
		    		size_hint: (1, None)
		    		height: 30
		    		Label:
		    			text: 'Penalty'
		    			size_hint_x: .3
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'
		    			padding_x: 10
		    		Label:
		    			id: hong_penalty
		    			size_hint_x: .7
		    			text_size: self.size
		    			halign: 'left'
		    			valign: 'center'

		    		Button:
		    			text: '+'
		    			size_hint_x: .1
		    			on_press: root.add_hong_penalty(self)
		    		Button:
		    			text: '-'
		    			size_hint_x: .1
		    			on_press: root.minus_hong_penalty(self)

	Label:
		size_hint: (1, None)
		text: 'CONTROLS'
		text_size: self.size
		halign: 'left'
		valign: 'center'
		height: 40
		padding_x: 10
		canvas.before:
			Color:
				rgba: (0, 1, 0, .8)
            Rectangle:
            	pos: self.pos
            	size: self.size

    GridLayout:
    	cols: 2
    	rows: 1

    	BoxLayout:
    		orientation: 'vertical'

    		Label:
    			id: time_counter
    			text: '00:00'
    			font_size: '48px'
    			size_hint_y: .4

    		Label:
    			id: round_number
    			text: '1'
    			font_size: '24px'
    			size_hint_y: .2

    		BoxLayout:
    			orientation: 'horizontal'
    			size_hint_y: .1
    			Button:
    				text: 'Start'
    				on_press: root.start_countdown(self)
    			Button:
    				text: 'Pause'
    				on_press: root.pause_countdown(self)
    			Button:
    				text: 'Reset'
    				on_press: root.reset_countdown(self)

    	BoxLayout:
    		orientation: 'vertical'
			Label:
				text: 'Server I.P. Address:'
				text_size: self.size
				halign: 'left'
				valign: 'center'
			TextInput:
				id: server_host
				text_hint: '127.0.0.1'
			Label:
				text: 'Server Port:'
				text_size: self.size
				halign: 'left'
				valign: 'center'
			TextInput:
				id: server_port
				text_hint: '5010'
				input_type: 'number'
			Label:
				id: connection_status
				text: 'Disconnected'
				font_size: '24px'
				color: (1, 0, 0, 1)
			Button:
				text: 'Connect'
				on_press: root.connect_to_display_server()
