#: kivy 1.10.0
<ServerRoot>
	orientation: 'vertical'
	match_number: match_number
	category_name: category_name

	chung_name: chung_name
	chung_score: chung_score
	chung_penalty: chung_penalty

	hong_name: hong_name
	hong_score: hong_score
	hong_penalty: hong_penalty

	time_counter: time_counter

	GridLayout:
		cols: 2
		rows: 1
		size_hint_y: None
		height: '50px'
		Label:
			id: match_number
			text: 'Match '
			text_size: self.size
			font_size: '24px'
			halign: 'left'
			valign: 'center'
			padding_x: '10px'

		Label:
			id: category_name
			text: 'Category '
			text_size: self.size
			font_size: '24px'
			halign: 'right'
			valign: 'center'
			padding_x: '10px'

	Widget:
        size_hint_y: None
        height: 6
        canvas:
            Color:
                rgb: 1., 1., 1.
            Rectangle:
                pos: self.pos
                size: self.width, 2
	
	GridLayout:
		cols: 5
		rows: 1

		BoxLayout:
			size_hint_x: .4
			orientation: 'vertical'

			Label:
				id: chung_name
				font_size: '24px'
				size_hint_y: None
				height: '50px'

			Label:
				id: chung_score
				text: '0'
				font_size: '96px'
		        canvas.before:
		            Color:
		                rgb: 0, 0, 1.
		            Rectangle:
		                pos: self.pos
		                size: self.size

			Label:
				id: chung_penalty
				text: '0'
				font_size: '24px'
				size_hint_y: None
				height: '50px'

		Widget:
	        size_hint_x: None
	        width: 2
	        canvas:
	            Color:
	                rgb: 1., 1., 1.
	            Rectangle:
	                pos: self.pos
	                size: 2, self.height

		BoxLayout:
			orientation: 'vertical'
			size_hint_x: .2

			Label:
				text: '0:00'
				id: time_counter
				font_size: '48px'
				bold: True
				color: (1, 1, 0, 1)

			Label:
				text: 'R 1'
				font_size: '48px'
				bold: True
				color: (0, 0, 0, 1)
				size_hint_y: None
				height: '50px'
				canvas.before:
					Color:
						rgb: (1, 1, 1)
					Rectangle:
						pos: self.pos
						size: self.size

		Widget:
	        size_hint_x: None
	        width: 2
	        canvas:
	            Color:
	                rgb: 1., 1., 1.
	            Rectangle:
	                pos: self.pos
	                size: 2, self.height
	                
		BoxLayout:
			orientation: 'vertical'
			size_hint_x: .4

			Label:
				id: hong_name
				font_size: '24px'
				size_hint_y: None
				height: '50px'

			Label:
				id: hong_score
				text: '0'
				font_size: '96px'
		        canvas.before:
		            Color:
		                rgb: 1, 0, 0
		            Rectangle:
		                pos: self.pos
		                size: self.size

			Label:
				id: hong_penalty
				text: '0'
				font_size: '24px'
				size_hint_y: None
				height: '50px'

