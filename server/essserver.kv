#: kivy 1.10.0

<ServerRoot>
	orientation: 'vertical'

	GridLayout:
		cols: 3
		rows: 1
		size_hint_y: None
		height: '50px'
		Label:
			text: 'Match 1'
			text_size: self.size
			font_size: '24px'
			halign: 'left'
			valign: 'center'
			padding_x: '10px'

		Label:
			text: 'Category A'
			text_size: self.size
			font_size: '24px'
			halign: 'center'
			valign: 'center'

		Label:
			text: 'Below 54 Kg'
			text_size: self.size
			font_size: '24px'
			halign: 'right'
			valign: 'center'
			padding_x: '10px'


	Widget:
        size_hint_y: None
        height: 6
        canvas:
            Color:
                rgb: 1., 1., 1.
            Rectangle:
                pos: self.pos
                size: self.width, 2
	
	GridLayout:
		cols: 5
		rows: 1

		BoxLayout:
			orientation: 'vertical'

			Label:
				text: 'Aaron Cook'

			Label:
				text: '0'

			Label:
				text: 'Kyongo: 0'

		Widget:
	        size_hint_x: None
	        width: 6
	        canvas:
	            Color:
	                rgb: 1., 1., 1.
	            Rectangle:
	                pos: self.pos
	                size: 2, self.height

		BoxLayout:
			orientation: 'vertical'

			Label:
				text: '0:00'

			Label:
				text: 'R 1'

		Widget:
	        size_hint_x: None
	        width: 6
	        canvas:
	            Color:
	                rgb: 1., 1., 1.
	            Rectangle:
	                pos: self.pos
	                size: 2, self.height
	                
		BoxLayout:
			orientation: 'vertical'

			Label:
				text: 'Aaron Cook'

			Label:
				text: '0'

			Label:
				text: 'Kyongo: 0'

