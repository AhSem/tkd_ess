#: kivy 1.10.0

<ClientRoot>
	action_bar_title: action_bar_title

	orientation: 'vertical'
	ActionBar:
		pos_hint: {'top': 1}
		ActionView:
			use_separator: True
			ActionPrevious:
				id: action_bar_title
				title: 'Disconnected'
				with_previous: False
			ActionButton:
				text:'Settings'
				on_press: root.open_setting_modal()

	BoxLayout:
		orientation: 'horizontal'
		
		BoxLayout:
			orientation: 'vertical'

			Button:
            	text: 'Head'
            	background_color: 0,2,3,1
            	on_press: root.score('chung_score',3)
    
	        Button:
	            text: 'Body'
	            background_color: 0,2,3,1
	            on_press: root.score('chung_score',2)

		BoxLayout:
			orientation: 'vertical'

			Button:
            	text: 'Head'
            	background_color: 2,0,0,1
            	on_press: root.score('hong_score',3)
    
	        Button:
	            text: 'Body'
	            background_color: 2,0,0,1
	            on_press: root.score('hong_score',2)


<SettingPopup>
	connection_status: connection_status
	title: 'Settings'
	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 30
			Label:
				text: 'Host I.P.'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				size_hint_x: .2
			TextInput:
				on_text: root.on_host_changed(self)

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 30
			Label:
				text: 'Port'
				text_size: self.size
				halign: 'left'
				valign: 'center'
				size_hint_x: .2
			TextInput:
				on_text: root.on_port_changed(self)


		Widget:

		Label:
			id: connection_status
			text:'Disconnected'

		Widget:

		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 50

			Button:
				text: 'Connect'
				on_press: root.on_connect_btn_pressed(self)
			Button:
				text: 'Close'
				on_press: root.on_close_btn_pressed(self)

