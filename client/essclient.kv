	BoxLayout:
		orientation: 'horizontal'
		
		BoxLayout:
			canvas.before:
				Color:
					rgba: (0, 0, 1, 1)
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: 'Blue'

		BoxLayout:
			canvas.before:
				Color:
					rgba: (1, 0, 0, 1)
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: 'Red'
